<Window x:Class="User_Interface_HSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Interface_HSP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF8B8B8B"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10,5,10,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
            <Label>Modul m :</Label>
            <TextBox x:Name="m_txt"/>
            <Label>Kopfspielfaktor cf :</Label>
            <TextBox x:Name="cf_txt"/>
            <Label>Teilkreisdurchmesser d :</Label>
            <TextBox x:Name="d_txt"/>
            <Label>Verzahnungswinkel α :</Label>
            <TextBox x:Name="cos_txt"/>
            <Label>Verdrehswinkel β :</Label>
            <TextBox x:Name="vw_txt"/>
            <Button x:Name="bestätigen_BTN" Click="Bestätigen_BTN_Click" Margin="0,5,0,0">bestätigen</Button>
            <Label x:Name="Error_txt" Foreground="Red"/>
        </StackPanel>

    </Grid>
</Window>
